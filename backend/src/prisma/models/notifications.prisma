enum NotificationType {

    MESSAGE
    ALERT
    REMINDER
    UPDATE

}

model Notification {

    id        BigInt   @id @default(autoincrement())

    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    userId    BigInt

    match     Match?   @relation(fields: [matchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    matchId   BigInt?  @unique

    like      Like?    @relation("LikeNotifications", fields: [likeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    likeId    BigInt?  @unique

    payment   Payment? @relation("PaymentNotifications", fields: [paymentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    paymentId BigInt?  @unique

    message   Message? @relation("MessageNotification", fields: [messageId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    messageId BigInt?  @unique

    type      NotificationType
    content   String
    isRead    Boolean  @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

}
