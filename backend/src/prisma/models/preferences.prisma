enum PreferredGender {

    WOMEN
    MEN

}

enum RelationshipType {

    FRIENDSHIP
    CASUAL_DATING
    SERIOUS_RELATIONSHIP
    MARRIAGE

}

enum DrinkingFrequency {

    NEVER
    RARELY
    SOCIALLY
    REGULARLY

}

enum Religion {

    ISLAM
    CHRISTIANITY
    JUDAISM
    OTHER

}

enum EducationLevel {

    HIGH_SCHOOL
    BACHELORS
    MASTERS
    DOCTORATE
    OTHER

}

model Preference {

    id BigInt @id @default(autoincrement())

    preferredGender PreferredGender
    ageRangeMin Int?
    ageRangeMax Int?
    city String @db.VarChar(32)
    dob DateTime
    nationality String? @db.VarChar(15)
    relationshipType RelationshipType
    hasChildren Boolean
    smoking Boolean
    drinking DrinkingFrequency
    pets Boolean?
    religion Religion?
    education EducationLevel

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([preferredGender, city, relationshipType])


    users UserPreference[]
    hobbies PrefferedHobby[]

}