enum LikeType {

    FRIEND
    CUTE
    SYMPATHY
    LIKE
    LOVE

}

model Like {

    id BigInt @id @default(autoincrement())

    liker User @relation("LikesGiven", fields: [likerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    likerId BigInt

    liked User @relation("LikesReceived", fields: [likedId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    likedId BigInt

    type LikeType

    createdAt DateTime @default(now())

    @@unique([likerId, likedId])

    @@index([likerId, likedId, type])


    notifications Notification? @relation("LikeNotifications")

}
