enum Features {

    UNLIMITED_LIKES
    SEE_WHO_IS_ONLINE
    BOOST_PROFILE
    VIEW_PROFILE_VISITORS
    LIKE
    LOVE
    UNDO_SWIPE
    HIDE_FROM_TG_CONTACTS

}

enum likeLimit {
    
    TWENTY
    FIFTY
    HUNDRED

}

model Permission {

    id BigInt @id @default(autoincrement())

    subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
    subscriptionId BigInt

    feature Features
    likeLimitValue likeLimit

    @@unique([subscriptionId, feature])

    @@index([subscriptionId])

}
