enum Features {

    DAILY_LIKE_LIMIT
    SEND_MESSAGES
    SEE_ONLINE_USERS
    BOOST
    VIEW_VISITORS
    PREMIUM_PHOTOS
    VIDEO_CALL
    SUPER_LIKE
    UNDO

}

model Permission {

    id            BigInt   @id @default(autoincrement())

    subscription  Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    subscriptionId BigInt

    feature       Features
    limitValue    Int?

    @@index([subscriptionId])

}
