model Block {

    id BigInt @id @default(autoincrement())

    blocker User @relation("BlockedUsers", fields: [blockerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    blockerId BigInt

    blocked User @relation("BlockedByUsers", fields: [blockedId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    blockedId BigInt

    createdAt DateTime @default(now())

    @@unique([blockerId, blockedId])

    @@index([blockerId, blockedId])

}
