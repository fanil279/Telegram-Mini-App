enum RelationshipType {

    FRIENDSHIP
    CASUAL_DATING
    SERIOUS_RELATIONSHIP
    MARRIAGE

    @@map("relationship_type")
    @@schema("base")

}

enum DrinkingFrequency {

    NEVER
    RARELY
    SOCIALLY
    REGULARLY

    @@map("drinking_frequency")
    @@schema("base")

}

enum Religion {

    ISLAM
    CHRISTIANITY
    JUDAISM
    OTHER
    
    @@map("religion")
    @@schema("base")

}

enum EducationLevel {

    HIGH_SCHOOL
    BACHELORS
    MASTERS
    DOCTORATE
    OTHER

    @@map("education_level")
    @@schema("base")

}

model Preference {

    id BigInt @id @default(autoincrement())

    ageRangeMin Int? @map("age_range_min")
    ageRangeMax Int? @map("age_range_max")
    prefferedNationality String? @db.VarChar(15) @map("preffered_nationality")
    relationshipType RelationshipType @map("relationship_type")
    hasChildren Boolean? @map("has_children")
    isSmoking Boolean? @map("is_smoking")
    isDrinking DrinkingFrequency? @map("is_drinking")
    hasPets Boolean? @map("has_pets")
    religion Religion?
    partnerEducation EducationLevel? @map("partner_education")

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@index([ageRangeMin, ageRangeMax, relationshipType])

    @@map("preferences")

    @@schema("base")


    users UserPreference[]
    hobbies PrefferedHobby[]

}